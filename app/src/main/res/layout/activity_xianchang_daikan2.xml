<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"
            android:padding="13dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="现场带看"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="#ffffff"
        android:paddingTop="20dp"
        android:id="@+id/ll_user"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_avatar"
                android:background="#d12324"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_avatar"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#000000"
                android:text="王先生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:background="@drawable/shape_r999_9c9c9c"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_name"
                android:layout_marginLeft="10dp"
                android:text="A类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_youxiao"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/shape_r999_9c9c9c"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="有效"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_bianhao"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:text="编号1231231342423"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/tv_title"
            android:src="@mipmap/dingwei"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/arrow_gray_right"
            android:id="@+id/tv_content"
            android:drawablePadding="3dp"
            android:textSize="13sp"
            android:layout_toRightOf="@id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:drawableRight="@mipmap/arrow_gray_right"
            android:id="@+id/tv"
            android:textColor="#000000"
            android:drawablePadding="3dp"
            android:textSize="15sp"
            android:gravity="right|center"
            android:layout_toRightOf="@id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:layout_marginTop="20dp"
        android:id="@+id/sl_xuanzejieguo"
        app:mTitle="选择一项结果"
        app:mHint="请选择"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/et_input"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textSize="12sp"
        android:hint="还说了什么(100字以内)"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/btn_next"
        android:textSize="18sp"
        android:text="提交"
        android:textColor="#ffffff"
        android:background="@drawable/shape_r6_60d1c8"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="50dp" />
</LinearLayout>