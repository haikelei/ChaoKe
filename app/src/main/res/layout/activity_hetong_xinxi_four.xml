<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:padding="13dp"
                android:src="@mipmap/back_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="其他信息"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="租客信息"
                android:textSize="13sp" />

            <luyuan.tech.com.chaoke.widget.InputLayout
                android:id="@+id/input_shouji"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:mHint="请填写"
                app:mTitle="手机" />
            <luyuan.tech.com.chaoke.widget.InputLayout
                android:id="@+id/input_youxiang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:mHint="请填写"
                app:mTitle="邮箱" />

            <luyuan.tech.com.chaoke.widget.SelectLayout
                android:id="@+id/sl_xueli"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:mHint="请选择"
                app:mTitle="学历(选填)" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="紧急联系人"
                android:textSize="13sp" />
            <luyuan.tech.com.chaoke.widget.InputLayout
                android:id="@+id/input_jinjixingming"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:mHint="请填写"
                app:mTitle="姓名" />
            <luyuan.tech.com.chaoke.widget.InputLayout
                android:id="@+id/input_jinjishouji"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:mHint="请填写"
                app:mTitle="手机" />


            <luyuan.tech.com.chaoke.widget.SelectLayout
                android:id="@+id/sl_jiafangchegndan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:mHint="请选择"
                app:mTitle="请选择甲方承担费用" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="补充条款"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/et_buchogntiaokuan"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>