<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"
            android:padding="13dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="写跟进"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_daikanjilu"
        app:mTitle="跟进类型"
        app:mHint="请选择"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_fangyuuanzhuangtai"
        android:layout_marginTop="1dp"
        app:mTitle="房源状态"
        app:mHint="请选择"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/et_more"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textSize="12sp"
        android:hint="业主还说了什么,补充下吧(200字以内)"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <Button
        android:id="@+id/btn_next"
        android:textSize="18sp"
        android:text="提交"
        android:textColor="#ffffff"
        android:background="@drawable/shape_r6_60d1c8"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="50dp" />
</LinearLayout>