<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"
            android:padding="13dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="合同信息"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#ffffff"
            android:paddingTop="20dp"
            android:id="@+id/ll_user"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:background="#d12324"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/iv_name"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_avatar"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:text="王先生"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/shape_r999_9c9c9c"
                    android:textSize="11sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_name"
                    android:layout_marginLeft="10dp"
                    android:text="A类"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:text="编号1231231342423"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="15sp"
                tools:text="滨江小区"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:text="已锁定一小时"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:text="合同信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <luyuan.tech.com.chaoke.widget.SelectLayout
            android:id="@+id/sl_qianyueriqi"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mTitle="签约日期"
            app:mHint="请选择"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <luyuan.tech.com.chaoke.widget.SelectLayout
            android:id="@+id/sl_shoucifukuan"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mTitle="首次付款日期"
            app:mHint="请选择"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <luyuan.tech.com.chaoke.widget.SelectLayout
            android:id="@+id/sl_chengzuqisuan"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mTitle="承租起算日"
            app:mHint="请选择"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <luyuan.tech.com.chaoke.widget.SelectLayout
            android:id="@+id/sl_chengzujiezhi"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mTitle="承租截止日"
            app:mHint="请选择"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <luyuan.tech.com.chaoke.widget.SelectLayout
            android:id="@+id/sl_fukuanfangshi"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mTitle="付款方式"
            app:mHint="请选择"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <luyuan.tech.com.chaoke.widget.SelectLayout
            android:visibility="gone"
            android:id="@+id/sl_yongtu"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mTitle="用途"
            app:mHint="请选择"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <luyuan.tech.com.chaoke.widget.InputLayout
            android:id="@+id/input_tongxundizhi"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:mTitle="通讯地址"
            app:mHint="请输入"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_marginBottom="30dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="下一步"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:layout_width="200dp"
            android:layout_height="50dp" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>