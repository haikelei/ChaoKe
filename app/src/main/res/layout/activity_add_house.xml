<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"
            android:padding="13dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="新增房源"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_unity_name"
        app:mTitle="小区名称"
        app:mHint="输入小区名称"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:background="#ffffff"
        android:paddingRight="20dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:textSize="16sp"
            android:text="物业地址"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <luyuan.tech.com.chaoke.widget.InputLayout
            android:id="@+id/input_lou"
            app:number_keybord="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:text="楼"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <luyuan.tech.com.chaoke.widget.InputLayout
            android:id="@+id/input_danyuan"
            app:number_keybord="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:text="单元"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <luyuan.tech.com.chaoke.widget.InputLayout
            android:id="@+id/input_hao"
            app:number_keybord="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <TextView
            android:text="号"
            android:textColor="@color/_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <luyuan.tech.com.chaoke.widget.InputLayout
        android:id="@+id/input_unity_address"
        android:layout_marginTop="1dp"
        app:mTitle="具体地址"
        app:mHint="输入具体地址"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_house_from"
        android:layout_marginTop="1dp"
        app:mTitle="房源来源"
        app:mHint="选择房源来源"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_house_state"
        android:layout_marginTop="1dp"
        app:mTitle="房源状态"
        app:mHint="选择房源状态"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_chuzufangshi"
        android:layout_marginTop="1dp"
        app:mTitle="出租方式"
        app:mHint="选择出租方式"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <luyuan.tech.com.chaoke.widget.InputLayout
        android:id="@+id/input_host_name"
        android:layout_marginTop="20dp"
        app:mTitle="姓名"
        app:mHint="输入房东姓名"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.InputLayout
        android:id="@+id/input_host_tel"
        android:layout_marginTop="1dp"
        app:mTitle="手机"
        app:mHint="输入房东手机号码"
        app:number_keybord="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_next"
        android:textSize="18sp"
        android:text="下一步"
        android:textColor="#ffffff"
        android:background="@drawable/shape_r6_60d1c8"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="50dp" />
</LinearLayout>