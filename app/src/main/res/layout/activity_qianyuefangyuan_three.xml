<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"
            android:padding="13dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="委托信息"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_fukuanxinxi"
        app:mTitle="付款信息"
        app:mHint="请选择"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.InputLayout
        android:id="@+id/input_fukuantianshu"
        android:layout_marginTop="1dp"
        app:mTitle="付款天数"
        app:mHint="请输入"
        app:number_keybord="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.InputLayout
        android:id="@+id/input_mianzhutianshu"
        android:layout_marginTop="1dp"
        app:mTitle="免租天数"
        app:mHint="请输入"
        app:number_keybord="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_weituoqisuanri"
        android:layout_marginTop="1dp"
        app:mTitle="委托起算日"
        app:mHint="请选择"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_weituodaoqiri"
        android:layout_marginTop="1dp"
        app:mTitle="委托到期日"
        app:mHint="请选择"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <Button
        android:id="@+id/btn_next"
        android:textSize="18sp"
        android:text="下一步"
        android:textColor="#ffffff"
        android:background="@drawable/shape_r6_60d1c8"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="50dp" />
</LinearLayout>