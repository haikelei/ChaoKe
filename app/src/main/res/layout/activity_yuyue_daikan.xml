<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black"
            android:padding="13dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="预约带看"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:background="#ffffff"
        android:paddingTop="20dp"
        android:id="@+id/ll_user"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_avatar"
                android:background="#d12324"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/iv_name"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_avatar"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textColor="#000000"
                android:text="王先生"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:background="@drawable/shape_r999_9c9c9c"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_name"
                android:layout_marginLeft="10dp"
                android:text="A类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/shape_r999_9c9c9c"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="有效"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:text="编号1231231342423"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <luyuan.tech.com.chaoke.widget.SelectLayout
        android:id="@+id/sl_yyueshijian"
        app:mTitle="预约时间"
        app:mHint="请选择"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

        <luyuan.tech.com.chaoke.widget.InputLayout
            android:id="@+id/input_jianmiandizhi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:mHint="请输入"
            app:mTitle="见面地点" />

    <RelativeLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:text="短信通知"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_duanxin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <luyuan.tech.com.chaoke.widget.InputLayout
        android:id="@+id/input_shoujihao"
        android:layout_marginTop="1dp"
        app:mTitle="手机号"
        app:mHint="请输入"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="约看房源"
        android:textSize="13sp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/btn_next"
        android:textSize="18sp"
        android:text="确认约看"
        android:textColor="#ffffff"
        android:background="@drawable/shape_r6_60d1c8"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="50dp" />
    </LinearLayout>
</ScrollView>